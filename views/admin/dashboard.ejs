<div class="card-container">
  <% data.forEach((post, index) => { %>
    <div class="card<%= index === 3 ? ' centered-card' : '' %>">
      <a href="/post/<%= post._id %>">

      <div class="image">
        <!-- Add image tag here if needed, e.g., <img src="<%= post.imageUrl %>" alt="<%= post.title %>"> -->
      </div>
      <div class="content">
        <div>
            <span><%= post.title %> &nearr;</span>

            <!--
             if there is no song in the post, 
            dont display Song:
            -->
            <% if (post.song != null) { %>
              <div>Song:<%= post.song %></div>
            <% } %>

            <div class="article-list__date"><%= post.createdAt.toDateString() %></div>
          </a>
        </div>



        <div class="admin-post-controls">
          <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
          <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn">
          </form>
        </div>
      </div>
    </div>
  <% }) %>
</div>
