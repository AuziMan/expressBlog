<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-posts" class="button">Add New Post! </a>

</div>

<div class="admin-card-container">
  <% data.forEach((post, index)=> { %>
    <div class="admin-card<%= index === 3 ? ' centered-card' : '' %>">
      <a href="/post/<%= post._id %>">
        <div class="admin-blog-content">
          <h1 class="post-title">
            <%= post.title %>
          </h1>
          <span class="post-body">
            <%= post.body %>
          </span>
          <span class="post-song">
            <% if (post.song) { %>
              <strong>Song:</strong>
              <%= post.song %>
                <% } else { %>
                  <p></p>
                  <% } %>
          </span>
        </div>
      </a>
      <div class="admin-post-controls">
        <a href="/edit-post/<%= post._id %>" class="admin-btn">Edit</a>
        <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" class="admin-btn">
        </form>
      </div>
    </div>
    <% }) %>
</div>