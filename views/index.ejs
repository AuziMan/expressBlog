<div class="author">
  <h1 class="author__heading">Auzi's Blog Page</h1>
  <p class="author__body">Just a fun side project</p>
</div>

<div class="image_container">
  <img src="/img/AandM.jpeg" alt="Auzi and Mason" class="auziandmason-img">
  <img src="/img/threeAmigos.jpeg" alt="threeAmigos" class="threeamigos-img">
  <img src="/img/AandK.jpeg" alt="threeAmigos" class="threeamigos-img">
</div>

<section class="articles">
  <h2 class="articles__heading">
    Latest Posts</h2>
</section>

<div class="card-container">
  <% data.forEach((post, index)=> { %>
    <div class="card<%= index === 3 ? ' centered-card' : '' %>">
      <a href="/post/<%= post._id %>">
        <div class="blog-content">
          <h1 class="post-title">
            <%= post.title %>
          </h1>
          <span class="post-body">
            <%= post.body %>
          </span>
          <span class="post-song">
            <% if (post.song) { %>
              <strong>Song:</strong>
              <%= post.song %>
                <% } else { %>
                  <p></p>
                  <% } %>
          </span>
          <div class="article-list__date">
            <%= post.createdAt.toDateString() %>
              <div class="read-more">Click to Read More!</div>

          </div>
        </div>
      </a>
    </div>
    <% }) %>
</div>