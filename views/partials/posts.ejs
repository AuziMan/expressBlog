 <div class="card-container">
    <% data.forEach((post, index)=> { %>
      <div class="card<%= index === 3 ? ' centered-card' : '' %>">
        <a href="/post/<%= post.title %>">
          <div class="blog-content">
            <h1 class="post-title">
              <%= post.title %>
            </h1>
            <span class="post-body">
              <%= post.body %>
            </span>
            <span class="post-song">
              <% if (post.song) { %>
                <strong>Song:</strong>
                <%= post.song %>
                  <% } else { %>
                    <p></p>
                    <% } %>
            </span>
            <span class="post-song">
              <% if (post.topic) { %>
                <strong>Topic:</strong>
                <%= post.topic %>
                  <% } else { %>
                    <p>no topic here</p>
                    <% } %>
            </span>
            <div class="article-list__date">
              <%= post.createdAt.toDateString() %>
                <div class="read-more">Click to Read More!</div>
            </div>
          </div>
        </a>
      </div>
      <% }) %>
  </div>